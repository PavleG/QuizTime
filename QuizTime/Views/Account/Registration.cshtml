@model RegistrationViewModel
@{
    ViewData["Title"] = "Registration";
}



  <!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>Registracija</title>

    <!-- Bootstrap core CSS -->
    <link href="bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/css/registration.css" rel="stylesheet">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>

  </head>

  <body class = "bg">
      <div id="message" style="margin-left:20%">
      <h1>Quiz Master Registration</h1>
<p >If you want to be able to create and host quizzes, please fill in the form bellow.</p>
</div>


  <!-- NAVBAR -->
	<nav class="navbar navbar-expand-lg nc fixed-top">
      <div class="container-fluid">
        <img src="~/images/logo.png" class="img-fluid" alt="Responsive image">

        <a href = "../Home/Index"><h3 class="col-lg-3 text-white">Homepage</h3></a>

        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item active">
              
            </li>
            <li class="nav-item">
                Already have an account?    
							<a href = "../Account/Login"><button class="btn btn-outline-light" type="submit">Log in</button></a>
						</li>
          </ul>
        </div>
      </div>
	</nav>

	 <!-- tabovi-->

	<p style="margin-bottom:2cm;"></p>

<form asp-controller="Account" asp-action="Registration" method="post">	  
	<div class="tab-content text-white">
		<div class="tab-pane in active">
            <div asp-validation-summary="ModelOnly"></div> 
				  <div class="form-group row" style="margin-left:10px">
					<label for="Email" class="col-sm-2 col-form-label">Email:</label>
					<div class="col-sm-5">
					  <input type="text"  asp-for="Email" class="form-control" id="inputPassword" placeholder="someone@example.com">
                      <span asp-validation-for="Email"></span> 
					</div>
				  </div>
				  <div class="form-group row" style="margin-left:10px">
					<label  class="col-sm-2 col-form-label" asp-for="UserName">Username:</label>
					<div class="col-sm-5">
					  <input asp-for="UserName" type="text" class="form-control" id="inputPassword" placeholder="Username">
                      <span asp-validation-for="UserName"></span> 
					</div>
				  </div>
					<div class="form-group row" style="margin-left:10px">
					<label class="col-sm-2 col-form-label" asp-for="Password">Password:</label>
					<div class="col-sm-5">
					  <input type="password" class="form-control" id="inputPassword" asp-for="Password" placeholder="Password">
                      <span asp-validation-for="Password"></span> 
					</div>
				  </div>
                 <div class="form-group row" style="margin-left:10px">
					<label class="col-sm-2 col-form-label" asp-for="ConfirmPassword">Confirm password:</label>
					<div class="col-sm-5">
					  <input type="password" class="form-control" id="inputPassword" asp-for="ConfirmPassword" placeholder="Password">
                      <span asp-validation-for="ConfirmPassword"></span> 
					</div>
				  </div>
				  <div class="form-group row" style="margin-left:10px">
					<label  class="col-sm-2 col-form-label" placeholder="Name" asp-for="FirstName">First name:</label>
					<div class="col-sm-5">
					  <input type="text" class="form-control" id="inputPassword" placeholder="Name" asp-for="FirstName">
                      <span asp-validation-for="FirstName"></span>
					</div>
				  </div>
				  <div class="form-group row" style="margin-left:10px">
					<label class="col-sm-2 col-form-label" placeholder="Last name" asp-for="LastName">Last name:</label>
					<div class="col-sm-5">
					  <input type="text" class="form-control" id="inputPassword" asp-for="LastName" placeholder="Last name" >
                      <span asp-validation-for="LastName"></span>
					</div>
				  </div>
				 
		</div>
	</div>		
    </form>  
<!--Neophodni podaci za pravljenje naloga zaposlenom su validna e-mail adresa,  ime,  prezime,  adresa,  korisniˇcko ime,  lozinka,  kao iodabir funkcije zaposlenog, ˇciji je nalog u nastanku -->

	
		<div class="col-md-6 offset-md-3 mt-2">
			<button class="m-auto btn-lg offset-md-0 mt-4 btn-success" style="width: 200px;" type="button" data-toggle="modal" data-target="#myModal">
			Sign up
			</button>
		</div>
	

	<!-- The Modal -->
	<div class="modal fade" id="myModal">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">

			<!-- Modal Header -->
			<div class="modal-header">
				<h4 class="modal-title">Congratulations!</h4>
                
				<button type="button" class="close" data-dismiss="modal">&times;</button>
			</div>
			

			<!-- Modal body -->
			<div class="modal-body">
                <h5 >Registration succesful</h5>
				You have succesfully made a new account<br>
				Back to the login page
			</div>

			<!-- Modal footer -->
			<div class="modal-footer">
				<a href="../Account/Login" class ="btn btn-success text-white" role="button">OK </a>
			</div>

			</div>
		</div>
	</div>
		
	


  </body>

</html>














